{
  "name": "tallify",
  "version": "1.0.0",
  "description": "Professional Accounting & ERP System - Desktop Application",
  "author": "Tallify Team",
  "license": "MIT",
  "main": "src/main/main.js",
  "homepage": "./",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "npm run bundle-python && electron-builder",
    "build-exe": "electron-packager . Tallify --platform=win32 --arch=x64 --out=dist --overwrite --icon=assets/icon.ico",
    "pack": "npm run bundle-python && electron-builder --dir",
    "dist": "npm run bundle-python && electron-builder",
    "bundle-python": "node build-scripts/bundle-python.js",
    "css:build": "tailwindcss -i ./src/renderer/styles/input.css -o ./src/renderer/styles/output.css -c ./config/tailwind.config.js",
    "css:watch": "tailwindcss -i ./src/renderer/styles/input.css -o ./src/renderer/styles/output.css -c ./config/tailwind.config.js --watch"
  },
  "dependencies": {
    "@playwright/test": "^1.57.0",
    "@react-native-async-storage/async-storage": "^2.2.0",
    "@react-navigation/bottom-tabs": "^7.8.7",
    "@react-navigation/drawer": "^7.7.5",
    "@react-navigation/native": "^7.1.22",
    "@react-navigation/stack": "^7.6.8",
    "@reduxjs/toolkit": "^2.11.0",
    "axios": "^1.13.2",
    "react-native-gesture-handler": "^2.29.1",
    "react-native-safe-area-context": "^5.6.2",
    "react-native-screens": "^4.18.0",
    "react-redux": "^9.2.0",
    "redux": "^4.2.1",
    "redux-thunk": "^2.4.2",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "electron": "^39.2.0",
    "electron-builder": "^24.9.1",
    "electron-packager": "^17.1.2",
    "tailwindcss": "^3.4.16"
  },
  "build": {
    "appId": "com.tallify.desktop",
    "productName": "Tallify",
    "files": [
      "src/**/*",
      "python/**/*",
      "assets/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "dist"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Tallify",
      "installerIcon": "assets/icon.ico",
      "uninstallerIcon": "assets/icon.ico",
      "installerHeaderIcon": "assets/icon.ico"
    },
    "portable": {
      "artifactName": "Tallify-${version}.exe"
    }
  }
}
